//reversing the pattern
import java.util.*;
public class Main{
    public static void main(String...args){
        Scanner a=new Scanner(System.in);
        int b=a.nextInt();
        for (int i=b;i>=1;i--){
            for(int j=1;j<=i;j++){
                System.out.print("*");
            }
            System.out.println(" ");
        }
    }
}

import java.util.*;
public class Main
{
    public int rahul(int a){
        int count=0;
        
            while(a>0){
                int digit=a%10;
                if(digit==0){
                    count++;
                }
                a=a/10;
                
            }
            return count;
            
        
    }
    public static void main(String...args){
        Scanner g=new Scanner(System.in);
        int a=g.nextInt();
        System.out.println("The numer of zeros are");
        Main obj=new Main();
        int result=obj.rahul(a);
        System.out.println(result);
    }
}
